{
  "name": "nsfw-booru-desktop-client",
  "productName": "NSFW Booru Client",
  "version": "1.1.0",
  "description": "A modern, secure desktop companion for browsing booru-style imageboard content",
  "main": "out/main/main.cjs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/KazeKaze93/NSFW-Booru-Desctop-Client-Unofficial-.git"
  },
  "scripts": {
    "dev": "chcp 65001 && electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "db:migrate": "ts-node src/main/db/migrate.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "validate": "npm run typecheck && npm run lint",
    "dist": "npm run build && electron-builder --publish always",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "booru",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.6",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^9.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.29.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "i18next": "^25.7.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.560.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.5.0",
    "react-virtuoso": "^4.17.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.76",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.kaze.nsfw-booru-desktop-client",
    "productName": "NSFW Booru Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "!**/.env",
      "data/*.db",
      "package.json",
      "!**/settings.json",
      "!**/*.log",
      "!**/*.map",
      "!**/scripts/**",
      "!**/.github/**",
      "!**/*.ts",
      "!**/*.tsx",
      "!vite.config.ts",
      "!electron.vite.config.ts",
      "!tailwind.config.js",
      "!postcss.config.js",
      "!drizzle.config.ts",
      "!**/tsconfig.json",
      "!**/.eslintrc*",
      "!**/.vscode",
      "!**/.gitattributes"
    ],
    "extraFiles": [],
    "extraResources": [
      {
        "from": "drizzle",
        "to": "drizzle"
      }
    ],
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "KazeKaze93",
      "repo": "NSFW-Booru-Desctop-Client-Unofficial-",
      "releaseType": "draft"
    },
    "win": {
      "target": "nsis",
      "artifactName": "NSFW-Booru-Client-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ]
  }
}
